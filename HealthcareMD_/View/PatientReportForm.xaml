<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthcareMD_.View"
        xmlns:HealthcareMD_="clr-namespace:HealthcareMD_" xmlns:viewmodel="clr-namespace:HealthcareMD_.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ReportFormViewModel}" x:Class="HealthcareMD_.View.PatientReportForm"
        mc:Ignorable="d"
        Title="PatientReportForm" Height="276" Width="469" Background="#FFF0F7F4">
    <Window.Resources>
        <ControlTemplate x:Key="validationTemplate">
            <Grid Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" Foreground="Red"/>
            </Grid>
        </ControlTemplate>

    </Window.Resources>
    <Grid>

        <TextBox x:Name="startDate_tb" Margin="22,79,253,130" Validation.ErrorTemplate="{StaticResource validationTemplate}" RenderTransformOrigin="-3.078,-0.132">
            <Binding Path="StartDate" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <HealthcareMD_:DateValidation ValidationStep="RawProposedValue"/>
                    <HealthcareMD_:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox x:Name="endDate_tb" Margin="249,79,22,130" Validation.ErrorTemplate="{StaticResource validationTemplate}" RenderTransformOrigin="-3.078,-0.132">
            <Binding Path="EndDate" UpdateSourceTrigger="LostFocus">
                <Binding.ValidationRules>
                    <HealthcareMD_:DateValidation ValidationStep="RawProposedValue"/>
                    <HealthcareMD_:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <Border BorderBrush="#70ABAF" Background="#70ABAF" BorderThickness="1" CornerRadius="8" Margin="138,135,251,27">
            <Button x:Name="ReportBttn" Margin="-1,-1,-1,-1" Click="GetReport_Click" BorderBrush="{x:Null}" Background="{x:Null}">
                <StackPanel VerticalAlignment="Center" Height="64" Width="58">
                    <Image Source="/Resources/acceptWhite.png" Stretch="Uniform" Height="36" Width="33"/>
                    <Label Content="Prihvati" Foreground="White" Height="43" Width="76" FontSize="13"/>

                </StackPanel>
            </Button>

        </Border>
        <Border BorderBrush="#70ABAF" Background="#70ABAF" BorderThickness="1" CornerRadius="8" Margin="235,135,154,27">
            <Button Click="CancelButton_Click" BorderBrush="{x:Null}" Background="{x:Null}" Width="80">
                <StackPanel Height="66" Width="56" Margin="0,0,20,0" >
                    <Image Source="/Resources/cancelWhite.png" Stretch="Uniform" Height="37" Width="38"/>
                    <Label Content="Otkaži" HorizontalContentAlignment="Center" Foreground="White" FontSize="13"/>
                </StackPanel>
            </Button>
        </Border>
        <Border BorderBrush="#70ABAF" Background="#FF70ABAF" BorderThickness="1" CornerRadius="3" Margin="22,10,22,186">
            <Label Content="{Binding PatientName}"  Foreground="White" HorizontalContentAlignment="Center" FontSize="20" />
        </Border>

    </Grid>
</Window>
